    <li></li>
</ul>
@section Scripts {
    <script type="text/javascript">
        jQuery(document).ready(function () {
            App.init();
            App.initUniform();
        });

        $(function () {
            $("#valiCode").bind("click", function () {
                this.src = "../Account/GetValidateCode?time=" + (new Date()).getTime();
            });
        });
    </script>
}
